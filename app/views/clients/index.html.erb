<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Display name</th>
      <th>Email</th>
      <th>Currency</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.display_name %></td>
        <td><%= client.email %></td>
        <td><%= client.currency %></td>
        <td><%= client.user_id %></td>
        <td><%= link_to 'Show', organization_client_path(@organization, client) %></td>
        <td><%= link_to 'Edit', edit_organization_client_path(@organization,client) %></td>
        <td><%= link_to 'Destroy', [@organization,client], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

